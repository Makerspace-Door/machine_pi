""" mdnfc_tool

Usage:
    mdnfc_tool (-l|--list)
    mdnfc_tool (-f|--format)
    mdnfc_tool --keyinit
    mdnfc_tool --test2

Options:
    -l --list       List tags and contents
    -f --format     Format tag PICC
    --keyinit       Initially configure secure key
    --test2         Test 2
"""

import sys
import mdnfc
import time
import json

from docopt import docopt

class AnyTag:
    def __enter__(self):
        tags = mdnfc.list_tags()
        first = True
        for t in tags:
            print("tag", t["uid"], "*" if first else "")
            first = False
        if len(tags) < 1:
            raise Exception("no tag found")
        self.tag = tags[0]
        self.uid = self.tag["uid"]
        mdnfc.connect(self.uid)
    def __exit__(self, type, value, traceback):
        mdnfc.disconnect(self.uid)

class Auth:
    def __init__(self, keyid, key):
        self.keyid = keyid
        self.key = bytes.fromhex(key)
    def __enter__(self):
        if len(self.key) == 8:
            mdnfc.auth_insecure(self.keyid, self.key)
        elif len(self.key) == 16:
            mdnfc.auth_secure(self.keyid, self.key)
        else:
            raise Exception("invalid key length")
    def __exit__(self, type, value, traceback):
        pass

class App:
    def __init__(self, aid):
        self.aid = aid
    def __enter__(self):
        mdnfc.app_select(0)
    def __exit__(self, type, value, traceback):
        pass

if __name__ == '__main__':

    args = docopt(__doc__)

    with open("config.json") as f:
        cfg = json.load(f)

    mdnfc.init()

    if args["--list"]:
        with AnyTag():
            # query apps
            aids = mdnfc.get_appids()
            print(" apps: " + " ".join([str(aid) for aid in aids]))
            # query key
            s,n = mdnfc.get_keysettings()
            print(" keysettings:", s, n)

    elif args["--format"]:
        with AnyTag(), Auth(0, cfg["key_picc"]):
            mdnfc.format()

    elif args["--keyinit"]:
        with AnyTag():
            for i in range(0,len(cfg["key_default"])):
                key = cfg["key_default"][i]
                try:
                    print("trying key", i, end=" ")
                    with App(0), Auth(0, key):
                        print("success, keychange", end=" ")
                        oldkey = bytes.fromhex(key)
                        newkey = bytes.fromhex(cfg["key_picc"])
                        mdnfc.change_key(0, oldkey, newkey)
                        print("ok")
                        break
                except Exception as e:
                    print("failed,", str(e))

    elif args["--test2"]:
        with AnyTag(), App(0), Auth(0, cfg["key_picc"]):
            pass

    mdnfc.deinit()

